<h1>{{ title }}</h1>

<a class="btn btn-primary" href="/campaigns/add" style="border-radius: 20px;">
    <img src="../images/add.png" style="height: 24px; width: 24px;"/>
    Add Listing
</a>

<br/> <br/>

<h3 style="text-align: center;">Here is a listing of Campaigns</h3>

<br/>

<table class="table" style="width: 800px; margin: auto" >
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Funding Goal</th>
            <th scope="col">Progress</th>
            <th scope="col"></th>
        </tr>
    </thead>
    {{#each campaignlist}}
        <tbody>
            <tr>
                <th scope="row">{{title}}</th>
                <td>${{goal}}</td>
                <td >
                    <div class="progress" style="width: 125px;">
                        <div class="progress-bar" role="progressbar" style="width: {{progressBar}}%;">${{progress}}</div>
                    </div><br>
                </td>
                <td><a href="campaigns/view?_id={{ this._id }}">
                    <img src="../images/open-link.png" style="height: 24px; width: 24px;"/>
                </a></td>
            </tr>
        </tbody>
    {{/each}}
</table>